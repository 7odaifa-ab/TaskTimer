<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="parent" stylesheets="@FXML.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HuimangTech.TimerController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <Pane BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="StartBtn" alignment="CENTER" defaultButton="true" layoutX="108.0" layoutY="245.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#StartBtn" prefHeight="45.0" prefWidth="380.0" ripplerFill="#325288" styleClass="jfxButton" text="%Start">
                     <font>
                        <Font name="Consolas Bold" size="25.0" />
                     </font>
                  </JFXButton>
                  <TextField fx:id="HoursTxtField" alignment="CENTER" layoutX="144.0" layoutY="138.0" prefHeight="36.0" prefWidth="76.0" promptText="%Hours" styleClass="accountText-field">
                     <padding>
                        <Insets bottom="0" left="0" right="0" top="0" />
                     </padding>
                     <font>
                        <Font size="25.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="MinTxtField" alignment="CENTER" layoutX="237.0" layoutY="138.0" prefHeight="36.0" prefWidth="82.0" promptText="%Minutes" styleClass="accountText-field">
                     <padding>
                        <Insets bottom="0" left="0" right="0" top="0" />
                     </padding>
                     <font>
                        <Font size="25.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="SecTxtField" alignment="CENTER" layoutX="339.0" layoutY="138.0" prefHeight="36.0" prefWidth="105.0" promptText="%Seconds" styleClass="accountText-field">
                     <padding>
                        <Insets bottom="0" left="0" right="0" top="0" />
                     </padding>
                     <font>
                        <Font size="25.0" />
                     </font>
                  </TextField>
                  <Label alignment="CENTER" layoutX="221.0" layoutY="128.0" text=":" textFill="#325288">
                     <font>
                        <Font name="Times New Roman Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" layoutX="321.0" layoutY="128.0" text=":" textFill="#325288">
                     <font>
                        <Font name="Times New Roman Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label fx:id="taskLbl" alignment="CENTER" layoutY="38.0" prefWidth="600.0" text="%tskLbl" textFill="#325288">
                     <font>
                        <Font name="Times New Roman" size="53.0" />
                     </font>
                  </Label>
                  <JFXButton fx:id="resetBtn" alignment="CENTER" cancelButton="true" layoutX="302.0" layoutY="245.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#resetBtn" prefHeight="45.0" prefWidth="185.0" ripplerFill="#325288" styleClass="jfxButton" text="Reset" visible="false">
                     <font>
                        <Font name="Times New Roman Bold" size="25.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="pauseBtn" alignment="CENTER" layoutX="108.0" layoutY="245.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#StartBtn" prefHeight="45.0" prefWidth="185.0" ripplerFill="#325288" styleClass="jfxButton" text="Pause" visible="false">
                     <font>
                        <Font name="Times New Roman Bold" size="25.0" />
                     </font>
                  </JFXButton>
               </children>
            </Pane>
         </center>
         <top>
            <Pane prefHeight="35.0" prefWidth="200.0" styleClass="sidebar" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton layoutX="550.0" onMouseClicked="#CLOSE_APP" prefHeight="35.0" prefWidth="50.0" styleClass="closeBtn">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" styleClass="closeBtn">
                           <image>
                              <Image url="@Images/delete.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton layoutX="500.0" onMouseClicked="#MINIMIZE_APP" prefHeight="35.0" prefWidth="50.0" styleClass="backBtn">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" styleClass="minus">
                           <image>
                              <Image url="@Images/minus.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton onMouseClicked="#BACK" prefHeight="35.0" prefWidth="50.0" styleClass="backBtn">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" onMouseClicked="#BACK" pickOnBounds="true" preserveRatio="true" styleClass="minus">
                           <image>
                              <Image url="@Images/left-arrow.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children></Pane>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
